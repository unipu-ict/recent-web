{% trans_default_domain 'FOSUserBundle' %}


 {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
             <p class="text-right text-success tekst-statusa-prijave">   {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
