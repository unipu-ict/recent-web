{% trans_default_domain 'FOSUserBundle' %}

<div class="row fos_user_user_show " >
<div class="panel-group">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h4 class="panel-title">
      	<div class="row">
      		<div class="col-sm-10">
      			
			        <h4 class="panel-heading text-left padding-5-margin-5">
			        	Dobrodošli <strong>{{ user.name }} {{ user.surname }}</strong>
			        </h4>
			    
		    </div>
		    <div class="col-sm-2">
		    	<button type="button" class="btn btn-primary btn-default float-right settings" data-toggle="collapse" href="#collapse1">
		    		Postavke <span class="glyphicon glyphicon-cog " aria-hidden="true"></span>
		    	</button>
		    </div>
		</div>     
    </div>
    <div id="collapse1" class="panel-collapse collapse">
      <div class="row padding-5-margin-5">
      	<div class="col-xs-12 col-sm-6 col-md-4 ">
		<p class="manji">Korisničko ime: <strong> {{ user.username }} </strong> </p>
		</div>	
		<div class="col-xs-12 col-sm-6 col-md-4 ">
		<p class="manji">E-mail: <strong> {{ user.email }} </strong> </p>
		</div>	
		<div class="col-xs-12 col-sm-6 col-md-2 ">
			<a role="button" class="btn btn-primary" href="#">Promjeni e-mail</a>
		</div>	
		<div class="col-xs-12 col-sm-6 col-md-2 ">
			<a role="button" class="btn btn-info" href="/resetting">Promjeni lozinku</a>
		</div>	
      </div>
    </div>
  </div>
</div>

