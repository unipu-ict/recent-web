{% extends 'dashboard/dashboard-base.html.twig' %}


{% block maincontent %}



<h1 class="page-header">Kontrolna ploča</h1>



<div class="row">
  <div class="col-md-3">
    <blockquote>
      <h5> Mjesec / Godina </h5>
      <h3><strong>{{ mjesec }}/{{ godina }}</strong></h3>
    </blockquote>
  </div>
  <div class="col-md-9">
  <nav aria-label="Page navigation" class="pagination-nav top-30">
          <ul class="pagination">
            <li>
              <a href="/dashboard/{{ next_g }}/{{ next_m }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li>
              {% for mjesec in mjeseci[0:7] %}
                <li><a href="/dashboard/{{ mjesec.godina }}/{{ mjesec.mjesec }}"><b>{{ mjesec.mjesec }}</b> <small>/</small>{{ mjesec.godina }}</a></li>
              {% endfor %}
            </li>
            <li>
              <a href="/dashboard/{{ previous_g }}/{{ previous_m }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>

  </div>

</div>

<br>


          <div class="table-responsive">
            <table class="table table-striped tablica-prva table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Ime i prezime</th>
                  <th>Odrađeno sati </th>
                  <th>Sati neprisustva na poslu <small>(bolovanje, itd.)</small></th>
                  <th>Prekovremeni</th>
                  <th>Više</th>
                </tr>
              </thead>
              <tbody>
                {% for korisnik in odradeno %}
                <tr>
                    
                    <td>{{ korisnik.user.id }}</td>
                    <td>{{ korisnik.user.name }} {{ korisnik.user.surname }}</td>
                    <td>{{ korisnik.odradeno }}</td>
                    <td>{{ korisnik.neprisutnost }}</td>
                    <td>{{ korisnik.prekovremeni }}</td>
                    <td><a href="/dashboard/radnik/{{ korisnik.user.id }}/{{ korisnik.godina }}/{{ korisnik.mjesec }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a></td>
                </tr>
                {% endfor %}
                
              </tbody>
            </table>
          </div>
  
{% endblock %}       