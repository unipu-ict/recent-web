{% extends 'dashboard/dashboard-base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}


{% block maincontent %}


<h1 class="page-header">Izvješće po radniku</h1>

  <div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title"></h4>

      <form action="detaljno" method="POST">
        <select name="g">
            {% for godina in godine %}
              <option value="{{ godina }}">{{ godina }}</option>
            {% endfor %}
        </select>
        <select name="m">
            {% for mjesec in mjeseci %}
              <option value="{{ mjesec }}">{{ mjesec }}</option>
            {% endfor %}

        </select>
        <select name="k">
            {% for user in users %}
              <option value="{{ user.id }}">{{ user.name }}</option>
            {% endfor %}
        </select>
        <input type="submit" value="Submit">
      </form>
    </div>
  </div>

<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse1">1) Ime i prezime radnika: <strong>{{ user.name }} {{ user.surname }}</strong></a>
      <h4 class="panel-title"><small>Odrađeno sati:</small> <strong> {{ sati }} </strong> </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse">
      <div class="panel-body">Odjel 1</div>
      <div class="panel-body">Odjel 2 u budućnosti</div>
    </div>
  </div>
</div>



<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" href="#collapse2">Razfoblje (mjesec): <strong>{{ mjesec }} </strong><small>/{{ godina }}</small></a>
    </h4>
  </div>
  <div id="collapse2" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="row ">
        <div class="col-xs-12 ">

        </div>  

      </div>
    </div>
  </div> 
</div>


            <table class="table table-striped table-employee">
              <thead>
                <tr>
                  <th>2) Datum</th>
                  <th>3) Početak rada</th>
                  <th>4) Završetak rada</th>
